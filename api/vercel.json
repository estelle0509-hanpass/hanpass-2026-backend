{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "NOTION_TOKEN": "@notion_token",
    "KPIS_DB_ID": "@kpis_db_id",
    "PROJECTS_DB_ID": "@projects_db_id"
  }
}
